</head>

<body>

{% include 'AppFrontendBundle::topbar.html.twig' %}

<div class="container-fluid">
    <div class="row-fluid">
        <div class="span3">
            {% block sidebar %}
            {% include 'AppFrontendBundle::sidebar.html.twig' %}
            {% endblock sidebar %}
        </div><!--/span-->
        <div class="span9">
            {% block flash %}
            {% if app.session.hasFlash('error') %}
            <div class="alert alert-error">{{app.session.flash('error')}}</div>
            {% endif %}
            {% if app.session.hasFlash('notice') %}
            <div class="alert alert-success">{{app.session.flash('notice')}}</div>
            {% endif %}
            {% endblock flash %}
            {% block content %}
            {% endblock content %}
        </div><!--/span-->
    </div><!--/row-->

    <hr>

    <footer>
        <p>&copy; Company 2012</p>
    </footer>

</div><!--/.fluid-container-->
<script type="text/javascript">
    require(["jquery", "bootstrap"], function($) {    });
</script>
</body>
</html>
